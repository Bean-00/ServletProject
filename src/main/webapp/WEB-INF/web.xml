<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	version="4.0" metadata-complete="true">

	<servlet>
		<servlet-name>Register</servlet-name>
		<servlet-class>user.servlet.RegisterServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>Login</servlet-name>
		<servlet-class>user.servlet.LoginServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>AfterLogin</servlet-name>
		<servlet-class>user.servlet.AfterLoginServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>SearchInfo</servlet-name>
		<servlet-class>user.servlet.SearchInfoServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>MyInfo</servlet-name>
		<servlet-class>user.servlet.MyInfoServlet</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>Logout</servlet-name>
		<servlet-class>user.servlet.LogoutServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>Register</servlet-name>
		<url-pattern>/register</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>Login</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>AfterLogin</servlet-name>
		<url-pattern>/after-login</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>SearchInfo</servlet-name>
		<url-pattern>/search-info</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>MyInfo</servlet-name>
		<url-pattern>/my-infomation</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>Logout</servlet-name>
		<url-pattern>/logout</url-pattern>
	</servlet-mapping>

</web-app>